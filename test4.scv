function test_operations ( ) is
    base : float := 0;
    altura : float := 0;
    h : float := 0;

    again : int := 0;
begin
    again := 1;

    while again = 1 loop
        base := read();
        altura := read();

        h := (base*altura)/2

        print h;

        again := read()
    end loop;
end test_operations;